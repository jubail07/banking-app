<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="/userSidebar.css">
    <style>
        .container {
            display: grid;
            grid-template-columns: auto auto auto auto;
            padding: 10px;
            gap: 20px;
        }

        .container a {
            background-color: #ffffff;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 30px 10;
            font-weight: 500;
            font-size: 30px;
            color: #0f4c81;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.3s;
        }

        .container a:hover {
            transform: translateY(-5px);
            background-color: #f9a826;
            color: #ffffff;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 1);
        }

        .active {
            background-color: #547792;
        }

        .camera-stream {
            width: 50%;
            aspect-ratio: 16/9;
            position: fixed;
            top: 15%;
            right: 25%;
            display: none;
        }

        .camera-button {
            background-color: #0f4c81;
            border: none;
            border-radius: 10px;
            padding: 10px;
            position: absolute;
            top: 20px;
            right: 50%;
        }

        .camera-container {
            width: 500px;
            height: 400px;
            border: 2px solid black;
        }

        #camera-close {
            background-color: #547792;
            font-weight: 600;
            position: absolute;
            top: 15%;
            right: 25%;
            border: none;
            padding: 5px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: none;
        }
    </style>

</head>

<body>
    <div class="wrapper">
        <%-include('../userSidebar')%>
            <div class="content">
                <div class="nav-adjust"></div>
                <div class="container">
                    <% people.forEach(i=>{ %>
                        <% if(user.fullname !==i.name){%>
                            <a href="/people/payment/<%= i.id %>">
                                <%=i.name%>
                            </a>
                            <% } %>
                                <% }) %>
                </div>
            </div>

            <button id="camera-button" class="camera-button">scanner</button>
            <video id="video" class="camera-stream" autoplay></video>
            <canvas width="640" height="480" style="display: none;" id="canvas"></canvas>
            <button id="camera-close" onclick="closeCamera()">X</button>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js"></script>

    <script>
        document.getElementById('people').classList.add('active')


        let canvas = document.querySelector('#canvas')
        var ctx = canvas.getContext('2d')
        var video = document.getElementById('video')
        const cameraButton = document.querySelector('#camera-button')
        var currentStream = null

        cameraButton.addEventListener('click', async function () {
            try {
                if (navigator.mediaDevices.getUserMedia) {
                    let video = document.getElementById('video')
                    video.style.display = 'block'
                    let close = document.getElementById('camera-close')
                    close.style.display = 'block'
                    const stream = await navigator.mediaDevices.getUserMedia({ video: true })
                    currentStream = stream
                    video.srcObject = stream
                    video.play()
                    requestAnimationFrame(scanQRCode)
                } else {
                    alert('no access to camera')
                }
            } catch (error) {
                console.log(error)
                alert('camera error')
            }
        })


        function scanQRCode() {
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height)
            var imageData = ctx.getImageData(0, 0, canvas.width, canvas.height)
            var qr = jsQR(imageData.data, canvas.width, canvas.height)
            if (qr) {
                window.location.href = qr.data
            }
            requestAnimationFrame(scanQRCode)
        }

        function closeCamera() {
            let video = document.getElementById('video')
            video.style.display = 'none'
            let close = document.getElementById('camera-close')
            close.style.display = 'none'
            if(currentStream){
                currentStream.getTracks().forEach(i=>i.stop())
            }
            video.pause()
        }
    </script>
</body>

</html>