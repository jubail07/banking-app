<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/userSidebar.css">
    <style>
        .container {
            display: grid;
            grid-template-columns: auto auto auto auto;
            padding: 10px;
            gap: 20px;
        }

        .container a {
            width: 50%;
            background-color: #ffffff;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            padding: 30px 10;
            font-weight: 500;
            font-size: 30px;
            color: #0f4c81;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.3s;
        }

        .container a:hover {
            transform: translateY(-5px);
            background-color: #f9a826;
            color: #ffffff;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 1);
        }

        .active {
            background-color: #547792;
        }

        .camera-stream {
            width: 40%;
            aspect-ratio: 16/9;
            position: fixed;
            top: 25%;
            right: 25%;
        }

        .camera-button {
            background-color: #0f4c81;
            border: none;
            border-radius: 10px;
            padding: 10px;
            position: absolute;
            top: 20px;
            right: 50%;
        }

        .camera-container {
            width: 500px;
            height: 400px;
            border: 2px solid black;
            position: fixed;
            top: 15%;
            right: 25%;
            display: none;
        }

        #camera-flip {
            background-color: #f9a826;
            padding: 7px;
            width: 100%;
            border: none;
        }

        #camera-close {
            background-color: #547792;
            font-weight: 600;
            position: absolute;
            top: 15%;
            right: 15%;
            border: none;
            padding: 5px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        .nav-bar {
            width: 100%;
            background-color: #0F4C81;
            padding: 30px;
            position: fixed;
            bottom: 0;
            left: 0;
            display: none;
        }

        .nav-bar a {
            text-decoration: none;
            color: #F4F6F8;
        }




        @media all and (max-width:800px) {
            .nav-bar {
                display: flex;
                justify-content: space-evenly;
                align-items: center;
            }

            .container {
                display: flex;
                flex-direction: column;
                align-items: center;
            }
        }
    </style>

</head>

<body>
    <div class="wrapper">
        <%-include('../userSidebar')%>
            <div class="content">
                <div class="nav-adjust"></div>
                <div class="container">
                    <% people.forEach(i=>{ %>
                        <% if(user.fullname !==i.name){%>
                            <a href="/people/payment/<%= i.id %>">
                                <%=i.name%>
                            </a>
                            <% } %>
                                <% }) %>
                </div>
            </div>

            <button id="camera-button" class="camera-button" onclick="cameraOn()">scanner</button>
            <div class="camera-container">
                <video id="video" class="camera-stream" autoplay></video>
                <canvas width="640" height="480" style="display: none;" id="canvas"></canvas>
                <button id="camera-close" onclick="closeCamera()">X</button>
                <button id="camera-flip" onclick="flipCamera()">Flip Camera</button>
            </div>

            <div class="nav-bar">
                <a href="/"><i class="bi bi-house"></i></a>
                <a href="/upi"><i class="bi bi-clipboard-plus"></i></a>
                <a href="/people"><i class="bi bi-people-fill"></i></a>
                <a href="/transaction"><i class="bi bi-arrow-left-right"></i></a>
                <a href="/logout"><i class="bi bi-door-closed-fill"></i></a>
            </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js"></script>

    <script>
        document.getElementById('people').classList.add('active')


        let canvas = document.querySelector('#canvas')
        var ctx = canvas.getContext('2d')
        var video = document.getElementById('video')
        const cameraButton = document.querySelector('#camera-button')
        var currentStream = null
        var flipButton = document.querySelector('#camera-flip')
        let useBackCamera = true


        async function cameraOn() {
            try {
                if (navigator.mediaDevices.getUserMedia) {
                    document.querySelector('.camera-container').style.display = 'block'
                    const stream = await navigator.mediaDevices.getUserMedia({
                        video: {
                            facingMode: useBackCamera ? { ideal: 'environment' } : { ideal: 'user' }
                        }
                    })
                    currentStream = stream
                    video.srcObject = stream
                    video.play()
                    requestAnimationFrame(scanQRCode)
                } else {
                    alert('no access to camera')
                }
            } catch (error) {
                console.log(error)
                alert('camera error')
            }
        }

        async function flipCamera() {
            if (currentStream) {
                currentStream.getTracks().forEach(track => track.stop());
            }
            useBackCamera = !useBackCamera;
            cameraOn()
        }

        function scanQRCode() {
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height)
            var imageData = ctx.getImageData(0, 0, canvas.width, canvas.height)
            var qr = jsQR(imageData.data, canvas.width, canvas.height)
            if (qr) {
                window.location.href = qr.data
            }
            requestAnimationFrame(scanQRCode)
        }

        function closeCamera() {
            document.querySelector('.camera-container').style.display = 'none'
            if (currentStream) {
                currentStream.getTracks().forEach(i => i.stop())
            }
            video.pause()
        }


    </script>
</body>

</html>